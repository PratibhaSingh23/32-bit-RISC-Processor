module INSTRUCTION_MMRY(INSTR, ADDRESS);
input [31:0] ADDRESS;
output [31:0] INSTR;
reg [31:0] INSTR_MEM [0:1023];
initial
begin
INSTR_MEM[0] = 32'b000000_00001_00010_00110_00000_100000; //ADD R6 R1 R2;
INSTR_MEM[4] = 32'b000000_00001_00010_00110_00000_100010; //SUB R6 R1 R2;
INSTR_MEM[8] = 32'b000000_00001_00010_00110_00000_100100; //AND R6 R1 R2;
INSTR_MEM[12] = 32'b000000_00001_00010_00110_00000_100101; //OR R6 R1 R2;
INSTR_MEM[16] = 32'b100011_00001_00010_00110_00000_xxxxxx; //LW R6 R1 R2;
INSTR_MEM[20] = 32'b101011_00001_00010_00110_00000_xxxxxx; //SW R6 R1 R2;
end

assign INSTR = INSTR_MEM[ADDRESS];

endmodule
